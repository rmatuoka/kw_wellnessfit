<% title @company.company_name+" - "+ @functionary.name %>

<h1><%= @company.company_name %> - <%=@functionary.name%></h1><br />
<br />
<p>Verifique se as informações abaixo estão corretas.</p><br />
<br />
<p>
  <strong>Nome:</strong>
  <%= @functionary.name %>
</p>
<p>
  <strong>Código Interno:</strong>
  <%= @functionary.internal_code %>
</p>
<p>
  <strong>Data de Admissão:</strong>
  <%= I18n.localize(@functionary.admission) if !@functionary.admission.blank?%>
</p>
<p>
  <strong>Sexo:</strong>
  <%= func_sex(@functionary.sex) if !@functionary.sex.nil?%>
</p>
<%if !@functionary.active %>
<p>
  <strong>Ativo:</strong>
  <%= print_active(@functionary.active) %>

</p>
<p>
  <strong>Data em que ficou inativo:</strong>
  <%= I18n.localize(@functionary.inactivation_date) if !@functionary.inactivation_date.blank?%>
</p>
<p>
  <strong>Razão:</strong><br />
  <%= @functionary.reason %>
</p>
<%end%>
<% if @bout.count > 0%>
<p>
  <strong>Turno atual:</strong>
  <%= @bout.first.bout.name %>
</p>
<%end%>
<% if @sector.count > 0%>
<p>
  <strong>Setor atual:</strong>
  <%= @sector.first.sector.name %>
</p>
<%end%>
<br />
<br />
<br />
<p>
	<%= submit_tag "Voltar",:type=>"button",:onclick=>"window.open('"+admin_company_functionaries_path(@company)+"','_self');", :class => "Bt_enviar", :style=>"margin-right: 5px;"%>
	<%= submit_tag "Turnos",:type=>"button",:onclick=>"window.open('"+admin_company_functionary_bout_functionaries_path(@company,@functionary)+"','_self');", :class => "Bt_enviar", :style=>"margin-right: 5px;"%>
	<%= submit_tag "Setores",:type=>"button",:onclick=>"window.open('"+admin_company_functionary_sector_functionaries_path(@company,@functionary)+"','_self');", :class => "Bt_enviar", :style=>"margin-right: 5px;"%>		
</p>
