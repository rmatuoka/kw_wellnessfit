<%content_for :title do%>
	Contato
<%end%>
<%content_for :head do %>
	<%=javascript_include_tag "jquery.validate.min.js"%>
	<script>
jQuery(document).ready(function(){
    	jQuery('#form_contato').validate({

        rules: {
            name: {
                required: true,
                minlength: 2
            },
            email: {
                required: true,
                email: true
            },
            message: {
                required: true
            },
 	    phone: {
                required: true
            }
        },
        messages: {
            name: "Preencha o seu nome",
            email: "Preencha seu e-mail de contato",
            message: "Preencha o campo com sua mensagem ",
	    phone: "Preencha o seu telefone com sua mensagem "
        }
    });
});
	</script>
<%end%>
<div id="Content">
	<div id="Box_left">
		<%=image_tag ("img_contato.png", :class=>"Img_align") %>
	</div><!-- Box_left end -->
	<div id="Box_right">
		<span class="Breadcrumb"><span class="Breadcrumb"><%=link_to "wellness fit", root_path%></span> : <span class="Breadcrumb"><%=link_to "contatos", contacts_index_path %></span></span>
		<h1 class="Title_internal_box_right">Contato</h1><br />
		<p class="Text_internal_box_right">
			Entre em contato conosco!
		</p>
		<%= form_tag '/contacts/create', {:id => "form_contato",:method => :post} %>
			<label>Nome</label>
			<br>
			<%=text_field_tag :name ,nil, :class=>"InputText" %>
			<br>
			<br>
			<label>Email</label>
			<br>
			<%=text_field_tag :email,nil,:class=>"InputText" %>
			<br>
			<br>
			<label>Telefone</label>
			<br>
			<%=text_field_tag :phone,nil,:class=>"InputText"  %>
			<br>
			<br>
			<label>Mensagem</label>
			<br>
			<%=text_area_tag(:message, content = nil, :rows=>"10")%>
			<br>
			<br>
			<%=image_submit_tag("bt_enviar.png", :alt=>"Enviar", :title=>"Enviar", :class=>"bt_enviar") %>
		</form>
	</div><!-- Box_right end -->
	<div class="clear"></div>
</div><!-- Content end -->
