<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title><%=yield :title%></title>	
	<%=javascript_include_tag  :defaults %>
	<%=javascript_include_tag "jquery"%>
	<script>
		jQuery.noConflict();
	</script>
	<%= csrf_meta_tag %>
	<%=stylesheet_link_tag "internal" %>
	<%=javascript_include_tag  "showtab" %>
	<%=yield :head%>
</head>
<body>
<div id="General_bg_footer">
<div id="General">
	<div id="Header">
		<div id="Logo_field">
			<%=link_to image_tag ("logo.png",:width=>"246", :height=>"98"), root_path %>
		</div>
		<div id="Login" class="hide_tab">
			<div id="Login_box">
				<div id="Box_left_login">
					<div class="Input_login"><input type="text" name="nome"/></div>
					<div class="Input_login"><input type="text" name="senha"/></div>
				</div>
				<div id="Box_right_login">
					<%=link_to image_tag ("bt_entrarlogin.png", :width=>"108", :height=>"28"),"#" %><br /><br />
					<%=link_to "Esqueceu a senha?","#" %>
				</div>
			</div>
			<div id="Login_tab" onclick="show_tab(this)"></div>
		</div>
		<div id="Menu">
		    <ul>
			<li><%=link_to "a wellness fit", about_index_path %> </li>
			<li><%=link_to "notícias", news_index_path %> </li>
			<li><%=link_to "ginástica laboral", labors_index_path %> </li>
			<li><%=link_to "dicas", hints_index_path %> </li>
			<li><%=link_to "contato", contacts_new_path %> </li>
			<li class='ciafisio'><%=link_to "ciafisio", ciafisio_index_path %> </li>
		    </ul>
		</div>
	</div><!-- Header -->

	<%= yield %>

	<div id="Footer">
		<div id="Footer_content_box_bg">
			<div id="Footer_content_box">
		    <%=link_to image_tag ("menu/bt_fhome.png", :width=>"41", :height=>"33"), root_path %>    
			<%=link_to image_tag ("menu/bt_fawelnessftnes.png", :width=>"98", :height=>"33"), about_index_path %>
			<%=link_to image_tag ("menu/bt_fnoticias.png", :width=>"61", :height=>"33"), news_index_path %>
			<%=link_to image_tag ("menu/bt_fglaboral.png", :width=>"122", :height=>"33"), labors_index_path %>
			<%=link_to image_tag ("menu/bt_fdicas.png", :width=>"41", :height=>"33"), hints_index_path %>
			<%=link_to image_tag ("menu/bt_ftrabalheconosco.png", :width=>"123", :height=>"33"), root_path %>
			<%=link_to image_tag ("menu/bt_fcontato.png", :width=>"61", :height=>"33"), contacts_new_path %>            
		    </div>
		    <div id="Footer_content_socialnet">
		    <%=link_to image_tag ("img_twitter.png", :width=>"107", :height=>"48"),"http://twitter.com/Wellness_Fit" %>
			<%=link_to image_tag ("img_facebook.png", :width=>"108", :height=>"49"),"http://www.facebook.com/pages/Wellness-Fit/213272565392605" %>
		    </div>
		    <p class="Footer_text">Wellness Fit © 2011 - Todos os direitos reservados.</p>
		</div>
	    </div><!-- Footer end -->
	</div><!-- General end -->
	</div><!-- General_bg_footer end -->

</body>
</html>
